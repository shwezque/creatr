{
    "name": "@creatr/api",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:seed": "tsx prisma/seed.ts",
        "db:reset": "prisma migrate reset --force",
        "test": "vitest run"
    },
    "dependencies": {
        "@creatr/shared": "*",
        "@fastify/cors": "^9.0.1",
        "@prisma/client": "^5.8.0",
        "fastify": "^4.25.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "prisma": "^5.8.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0",
        "vitest": "^1.2.0"
    }
}